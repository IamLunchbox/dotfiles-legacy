configuration {                                                                           
        modi: "run,drun";                                                                 
        show-icons: true;                                                                 
        font: "Noto Sans 8";                                                              
        terminal: "i3-sensible-terminal";                                                 
        fixed-num-lines: true;                                                            
        sidebar-mode: true;                                                               
        kb-mode-next: "Shift+Right,Control+Tab,Tab";                                      
        kb-row-tab: "";                                                                   
}                                                                                         
@theme "/usr/share/rofi/themes/Arc-Dark.rasi"                                             
listview {                                                                                
        columns: 3;                                                                       
}

window {
        fake-transparency: false;
}
